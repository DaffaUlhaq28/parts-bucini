generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

// Data Pembeli
model User {
  id        Int      @id @default(autoincrement())
  email     String   @unique
  password  String
  firstName String
  lastName  String?
  address   String?
  phone     String?
  createdAt DateTime @default(now())
  orders    Order[]
}

// Data Pesanan
model Order {
  id            Int         @id @default(autoincrement())
  invoice       String      @unique // Contoh: #BCN-12345
  totalAmount   Int
  status        String      @default("PENDING")
  paymentMethod String?
  createdAt     DateTime    @default(now())
  userId        Int
  user          User        @relation(fields: [userId], references: [id])
  items         OrderItem[]
}

// Rincian Barang per Pesanan
model OrderItem {
  id          Int     @id @default(autoincrement())
  productName String
  color       String
  price       Int
  quantity    Int
  image       String?
  orderId     Int
  order       Order   @relation(fields: [orderId], references: [id])
}

// Tambahkan di bawah model yang mungkin sudah ada (misalnya model User)

model ProductSatchel {
  id          Int      @id @default(autoincrement())
  nama        String
  harga       Int
  deskripsi   String?  @db.Text
  gambar      String   // Nanti diisi nama file gambar
  createdAt   DateTime @default(now())
}
// ... (User, Order, OrderItem biarkan saja) ...

// 1. Kategori / Koleksi (Misal: Satchel Bags, Wallets)
model Collection {
  id        Int       @id @default(autoincrement())
  name      String
  slug      String    @unique // Untuk URL (misal: satchel-bags)
  products  Product[]
  createdAt DateTime  @default(now())
}

// 2. Produk Utama (Induk)
model Product {
  id           Int              @id @default(autoincrement())
  name         String
  price        Int
  description  String           @db.Text
  collectionId Int?             // Relasi ke Koleksi
  collection   Collection?      @relation(fields: [collectionId], references: [id])
  variants     ProductVariant[] // Relasi ke Varian
  createdAt    DateTime         @default(now())
  updatedAt    DateTime         @updatedAt
}

// 3. Varian Produk (Anak) - Menyimpan Stok, Warna, dan Gambar spesifik
model ProductVariant {
  id        Int      @id @default(autoincrement())
  productId Int
  product   Product  @relation(fields: [productId], references: [id], onDelete: Cascade)
  colorName String   // Misal: "Saddle Brown"
  colorHex  String   // Misal: "#8B4513" (Buat bulatan warna)
  stock     Int      @default(0)
  image     String?  // Foto spesifik warna ini
}